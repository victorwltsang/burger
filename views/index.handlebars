

<header>
    <img class="logo" src = "/assets/img/bburgers.png"/>
</header>




<div class="container">
<div class="text-center ">
<h2> Add burger to list </h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>

  <button class="btn btn-lg btn-success btn-width" type="submit">Add Burger</button>
</form>
</div>
<br/>



<div class="row">
<div id="toEat" class="col-md-5">
<h3 class="text-center"> To Eat List: </h3>
  <ul>
    {{#each burger}}
      {{#unless this.devoured}}
        <li>
          {{this.id}}) {{this.burger_name}}

          <form class="myForm" action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devour" value="true">
            <button class="btn btn-lg btn-success" type="submit">Devour!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="col-md-2"></div>

<div id="eatten" class="col-md-5">
<h3 class="text-center"> Burger Conquests: </h3>
  <ul>
    {{#each burger}}
      {{#if this.devoured}}
        <li>
          <del>{{this.id}}) {{this.burger_name}}</del>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>
</div>

</div>
